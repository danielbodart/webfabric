<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <servlet>
        <servlet-name>sitemesh-stringtemplate</servlet-name>
        <servlet-class>org.webfabric.web.sitemesh.StringTemplateDecoratorServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>sitemesh-stringtemplate</servlet-name>
        <url-pattern>*.st</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sitemesh-service</servlet-name>
        <servlet-class>org.webfabric.web.sitemesh.SiteMeshServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>sitemesh-service</servlet-name>
        <url-pattern>/sitemesh</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>