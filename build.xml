<?xml version="1.0" encoding="UTF-8"?>
<project name="webfabric" default="build">

    <property name="build" value="${basedir}/build"/>
    <property name="build.output" value="${build}/output"/>
    <property name="dist" value="${build.output}/dist"/>
    <property name="reports" value="${build.output}/reports"/>
    <property name="src" value="${basedir}/src"/>
    <property name="test" value="${basedir}/test"/>

    <path id="dependancies">
        <fileset dir="lib" includes="**/*.jar"/>
    </path>

    <path id="all.jars">
        <path refid="dependancies"/>
        <fileset dir="${dist}" includes="**/*.jar"/>
    </path>

    <target name="clean" description="cleanup all">
        <delete dir="${build.output}"/>
    </target>

    <target name="compile">
        <compile.and.jar src="${src}" jar="${dist}/webfabric.jar" classpathref="dependancies"/>
        <compile.and.jar src="${test}" jar="${dist}/webfabric.test.jar" classpathref="all.jars"/>
    </target>

    <target name="test">
        <test dir="${test}" classpathref="all.jars" reports="${reports}"/>
    </target>

    <target name="build" depends="clean, compile, test" description="build all"/>

    <target name="server">
        <java classname="org.webfabric.WebServer">
            <classpath>
                <path refid="all.jars"/>
                <pathelement path="${java.class.path}"/>
            </classpath>
        </java>
    </target>


    <macrodef name="compile.and.jar">
        <attribute name="src"/>
        <attribute name="jar"/>
        <attribute name="classpathref"/>
        <attribute name="debug" default="yes"/>
        <attribute name="classes" default="@{jar}.classses"/>

        <sequential>
            <mkdir dir="@{classes}"/>
            <javac srcdir="@{src}" destdir="@{classes}" debug="@{debug}" classpathref="@{classpathref}"/>

            <copy todir="@{classes}">
                <fileset dir="@{src}" excludes="**/*.java"/>
            </copy>

            <jar destfile="@{jar}" basedir="@{classes}"/>

            <delete dir="@{classes}"/>
        </sequential>
    </macrodef>

    <macrodef name="test">
        <attribute name="dir"/>
        <attribute name="reports"/>
        <attribute name="classpathref"/>

        <sequential>
            <mkdir dir="@{reports}"/>
            <junit printsummary="no" fork="on" failureproperty="failed" forkmode="once">
                <classpath refid="@{classpathref}"/>
                <formatter type="xml"/>
                <batchtest todir="@{reports}">
                    <fileset dir="@{dir}">
                        <include name="**/*Test*.java"/>
                    </fileset>
                </batchtest>
            </junit>
            <fail message="Tests failed" if="failed"/>
        </sequential>
    </macrodef>

</project>